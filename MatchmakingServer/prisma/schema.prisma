generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MatchType {
  Friendly
  Rank
}

model Match {
  id           String     @id @unique
  matchType    Int
  subGameId    String
  mapId        String
  targetRating Int
  createdAt    Int
  playerList   String[]
}

model MatchmakingTicket {
  id         String     @id @unique
  creator    String
  matchType  Int
  subGameId  String
  mapId      String
  rating     Int
  createdAt  Int
}

enum WaitingRoomStatus {
  None
}

model WaitingRoom {
  id                     String             @id @unique
  matchType              Int
  subGameId              String
  mapId                  String
  targetRating           Int
  createdAt              Int
  matchmakingTicketList  String[]
  maxWaitingTime         Int
  minPlayerCount         Int
  maxPlayerCount         Int
  status                 Int
}